# Remember Me - Docker Environment Variables Example
# Copy this file to .env.docker and fill in your actual values

# ============================================
# Database
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=remember_me
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379
RATE_LIMIT_REDIS_URL=redis://redis:6379

# ============================================
# Core Application
# ============================================
NODE_ENV=staging
PORT=4000
API_PORT=4000

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=change-me-to-a-secure-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ============================================
# Queue & Jobs
# ============================================
QUEUE_MODE=bullmq
BULLMQ_QUEUE_NAME=integration-jobs
INTEGRATION_WORKER_CONCURRENCY=5
JOB_RUNNER_ENABLED=true
JOB_RUNNER_INTERVAL_MS=5000
NO_REPLY_SCAN_ENABLED=true
NO_REPLY_SCAN_INTERVAL_MS=300000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true

# ============================================
# Metrics & Observability
# ============================================
METRICS_TOKEN=staging-metrics-token-change-me
APP_VERSION=1.0.0

# ============================================
# Inbox
# ============================================
INBOX_SLA_MINUTES=60

# ============================================
# Token Encryption (Production)
# ============================================
TOKEN_ENCRYPTION_KEY=base64-encoded-32-byte-key-here
TOKEN_ENCRYPTION_KEY_ID=v1

# ============================================
# WhatsApp Integration
# ============================================
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_APP_ID=
WHATSAPP_APP_SECRET=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_WEBHOOK_URL=

# ============================================
# Meta/Instagram Integration
# ============================================
META_APP_ID=
META_APP_SECRET=
META_OAUTH_REDIRECT_URI=
INSTAGRAM_VERIFY_TOKEN=
META_PAGE_ACCESS_TOKEN=
INSTAGRAM_PAGE_ID=
META_AD_ACCOUNT_ID=

# ============================================
# Meta Spend & Token Refresh
# ============================================
META_SPEND_ENABLED=true
META_SPEND_CRON=0 6 * * *
META_TOKEN_REFRESH_ENABLED=true
META_TOKEN_REFRESH_CRON=0 4 * * *

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
SLOW_REQUEST_MS=1500
