{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".smoke-e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@remember-me/(.*)$": "<rootDir>/../../packages/$1/src"
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/smoke-e2e.setup.ts"]
}
