# ============================================
# Web (Frontend) Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in all REQUIRED values
# DO NOT commit .env.production to git
# These variables are exposed to the browser (NEXT_PUBLIC_*)

# ============================================
# REQUIRED - API Configuration
# ============================================

NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com/api
# REQUIRED: Full URL to API backend (Railway domain)
# Must include /api suffix
# Must use HTTPS in production
# Example: https://your-api-production.up.railway.app/api

# ============================================
# OPTIONAL - Application Configuration
# ============================================

NEXT_PUBLIC_APP_ENV=prod
# OPTIONAL: Environment identifier ('dev', 'staging', 'prod')
# Used for feature flags and environment-specific behavior

# ============================================
# OPTIONAL - Polling Intervals (milliseconds)
# ============================================

NEXT_PUBLIC_POLLING_INTERVAL_CONVERSATIONS=10000
# OPTIONAL: Polling interval for conversations list (default: 10000ms = 10s)

NEXT_PUBLIC_POLLING_INTERVAL_MESSAGES_OPEN=2000
# OPTIONAL: Polling interval for messages in open conversations (default: 2000ms = 2s)

NEXT_PUBLIC_POLLING_INTERVAL_MESSAGES_CLOSED=8000
# OPTIONAL: Polling interval for messages in closed conversations (default: 8000ms = 8s)

# ============================================
# NOTES
# ============================================
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never put secrets in NEXT_PUBLIC_* variables
# - Set these in Vercel environment variables
# - Changes require rebuild/redeploy
