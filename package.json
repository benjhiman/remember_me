{
  "name": "remember-me",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "docker:up": "docker-compose -f docker-compose.staging.yml --env-file .env.docker up -d",
    "docker:down": "docker-compose -f docker-compose.staging.yml --env-file .env.docker down",
    "docker:logs": "docker-compose -f docker-compose.staging.yml --env-file .env.docker logs -f",
    "docker:build": "docker-compose -f docker-compose.staging.yml --env-file .env.docker build",
    "smoke:e2e": "cd apps/api && pnpm smoke:e2e",
    "smoke:api": "npx tsx scripts/prod-smoke.ts",
    "smoke:web": "npx tsx scripts/web-smoke.ts"
  },
  "devDependencies": {
    "@jest/test-sequencer": "29.7.0",
    "@prisma/client": "5.22.0",
    "prettier": "^3.2.5",
    "prisma": "5.22.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
